r2eulzyx := proc (R) 
  # Siehe proc_r2eulxyz
  # Hier Transponiert, negierte Winkel und vertauschte Komponenten f√ºr ZYX
  local alpha, beta, gama, zyx, sr, cr;  
  alpha := arctan(-R(3,2), R(3,3));
  sr := sin(alpha);
  cr := cos(alpha);
  beta := arctan(R(3,1), cr * R(3,3) - sr * R(3,2));
  gama := arctan(-R(2,1), R(1,1));
  zyx := <-gama; -beta; -alpha>:
  return zyx:
end proc;
